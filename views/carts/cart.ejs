<div class="container mt-5">
    <h1>Cart</h1>
    <table class="table table-dark table-hover ">
        <tr>
            <th>Name Products</th>
            <th>Price Products</th>
            <th>Image Products</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
            <%
                cart.map(x=>{%>
                    <tr id="tr_cart_<%= x.id%>">
                        <td><%= x.item.name%></td>
                        <td><%= Intl.NumberFormat().format(x.item.price)   %></td>
                        <td><img src="<%= x.imageSrc %>" height="50px" width="100px" alt=""></td>
                        <td>
                            <div class="editCart">
                                <form action="/cart/reduce/<%= x.id %>?_method=PUT" data-id="<%= x.id%>" class="reduceCart" method="POST">
                                    <input type="submit" value="-" class="btn btn-light">
                                </form>
                                    <span id="qty<%= x.id %>"><span id="qty2<%= x.id %>"><%= x.qty %></span></span>
                                <form action="/cart/increase/<%= x.id %>?_method=PUT" data-id="<%= x.id%>" class="increaseCart" method="POST">
                                    <input type="submit" value="+" class="btn btn-light">
                                </form>
                            </div>
                            
                        </td>
                        <td>
                            <form class="deleteCart" action="/cart/<%= x.id%>?_method=DELETE" data-id="<%= x.id%>" method="POST">
                                <input type="submit" value="Delete" class=" btn btn-danger" >
                            </form>
                        </td>
                     </tr>
                <%})
            %>
    </table>
     
    <h1>Total: <span id="total1"><span id="total2"><%= Intl.NumberFormat().format(total)  %></span></span>Ä‘ </h1>

    <a href="/cart/checkout" class="btn btn-info" style="font-size: 20px; font-weight: 500; color: rgb(43, 28, 28);">Checkout</a>
  </div>