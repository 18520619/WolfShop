<div class="container mt-5">
    
    <div class="form-group ">
        <form action="/cart/order" method="POST">
            <h4>Address</h4>
            <input type="text" name="address" required class="form-control" placeholder="Enter address">

            <table  class="table table-dark table-hover mt-5 ">
                <tr>
                    <th>Name Product</th>
                    <th>Price Product</th>
                    <th>Image Product</th>
                    <th>Quantity Product</th>
                    <th>Temporary</th>
                </tr>
                <%
                products.map(x=>{%>
                        <tr id="tr_cart_<%= x.id%>">
                            <td><%= x.item.name%></td>
                            <td><%= Intl.NumberFormat().format(x.item.price)   %></td>
                            <td><img src="<%= x.imageSrc %>" height="50px" width="100px" alt=""></td>
                            <td>
                                <div class="editCart">
                                   
                                        <span id="qty<%= x.id %>"><span id="qty2<%= x.id %>"><%= x.qty %></span></span>
                                    
                                </div>
                                
                            </td>
                            <td>
                                
                               <span><%=Intl.NumberFormat().format( x.item.price*x.qty) %></span>
                            </td>
                         </tr>
                    <%})
                %>


            </table>


           

            <div class="total">
                <h1>Total: <%= total %>đ </h1>
                <input style="float: right; font-size: 20px; font-weight: 500; color: rgb(43, 28, 28); " type="submit" class="btn btn-info mt-2" name="Order" value="Tiến hành thanh toán" >    
            </div>

            <a href="/" class="btn btn-info mt-2 " style="font-size: 20px; font-weight: 500; color: rgb(43, 28, 28);">Return Home </a>
        </form>

        <a style="float: right; font-size: 20px; font-weight: 500; color: rgb(43, 28, 28);" href="/cart/pay" class="btn btn-info mt-2">Thanh toán Paypal</a>
    </div>
</div>

