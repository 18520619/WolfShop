<div class="container mt-5">
   
    <a type="button" class="btn btn-info btn-lg" href="/user/register">Add New user</a>
    <h1>List Products</h1>
    <%- include('../part/message')%>
<table class="table table-dark table-hover">
    <tr>
        <th>User Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    <%  
        users.map(user=>{%>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.password %></td>
                <td><a href="/" class="btn btn-warning">Edit</a></td>
                <td>
                    <%- include('../part/deleteForm',{url:`/user/${user._id}`}) %>    
                </td>
            </tr>
        <%})    
    %>
  </table>

</div>